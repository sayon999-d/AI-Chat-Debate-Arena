# Groq (Primary - fastest, free tier available)
# Get your key at: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# OpenRouter (Fallback 1 - access to multiple models)
# Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Chutes (Fallback 2 - decentralized)
# Get your key at: https://chutes.ai
CHUTES_API_KEY=your_chutes_api_key_here

# Bytez (Fallback 3 - free inference)
# Get your key at: https://bytez.com
BYTEZ_API_KEY=your_bytez_api_key_here

# ==========================================
# OPTIONAL SERVICES
# ==========================================

# Tavily API for web search (optional)
# Get your key at: https://app.tavily.com
TAVILY_API_KEY=

# OpenRouter specific settings (optional)
OPENROUTER_REFERER=http://localhost:3000
OPENROUTER_TITLE=Local Knowledge Chatbot

# ==========================================
# TOKEN & RATE LIMIT SETTINGS
# ==========================================

# Maximum tokens for responses
MAX_OUTPUT_TOKENS=256
MAX_TOTAL_TOKENS=650

# Rate limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Query limits
MAX_QUERY_LENGTH=5000

# Cache TTL (seconds)
CACHE_TTL_SECONDS=3600

# ==========================================
# SERVER SETTINGS
# ==========================================

HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS - Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:5173

# Enable API documentation
ENABLE_DOCS=true
